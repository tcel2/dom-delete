{

  "manifest_version": 2,
  "name": "DOM delete",
  "version": "1.1.2",

  "description": "Delete DOM element by clicking on the element.",

  "icons": {
    "48": "icons/dom_delete.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/main.js"]
    }
  ],

  "browser_action": {
    "default_icon": {
      "19": "icons/dom_delete.png"
    },
    "default_title": "Delete html element"
  },

  "background": {
    "scripts": ["dist/background.js"]
  }

}
