{

  "manifest_version": 2,
  "name": "Sniper",
  "version": "1.0",

  "description": "Delete HTML element by pointing and shooting.",

  "icons": {
    "48": "icons/border-48.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/main.js"]
    }
  ],

  "browser_action": {
    "default_icon": {
      "19": "icons/sniper.png"
    },
    "default_title": "Delete html element"
  },

  "background": {
    "scripts": ["src/background.js"]
  }

}
